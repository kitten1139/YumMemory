<div class="container">
  <%= flash[:notice] %>
  <h4>ログイン</h4>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tbody>
            <tr>
              <td class="pr-5 pb-3"><%= f.label :email, "メールアドレス" %></td>
              <td class="pb-3"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td></td>
              <td class="actions">
                <%= f.submit "ログイン", class: "btn btn-outline-success mt-3" %>
              </td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
