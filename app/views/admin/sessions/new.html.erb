<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <table class="ml-5 mb-5">
      <h4>ログイン</h4>
      <tbody>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <td>
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td class="actions">
            <%= f.submit "ログイン", class: "btn btn-outline-success" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
