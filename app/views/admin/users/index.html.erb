<div class="container">
  <div class="row">
    <div class="text-center">
      <table class="table table-hover">
      <h4>会員一覧</h4>
        <thead>
          <tr class="table-warning">
            <th scope="col">会員ID</th>
            <th scope="col">プロフィール画像</th>
            <th scope="col", style="text-decoration: underline;">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= image_tag user.get_profile_image, size:"50x50" %></td>
            <td><%= link_to admin_user_path(user), style: "color: #000; text-decoration: underline;" do %>
                  <%= user.nickname %>
                <% end %>
            </td>
            <td><%= user.email %></td>
            <% if user.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-secondary font-weight-bold">退会</td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
      <ul class="pagination justify-content-center">
        <%= paginate @users %>
      </ul>
    </div>
  </div>
</div>
