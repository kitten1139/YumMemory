<div class="container">
  <h6 class="mt-3"><%= @post.user.nickname %>さんの商品レビュー詳細</h6>
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <table style="word-break:break-all;">
        <thead>
          <tr>
            <th style="width:200px"></th>
            <th style="width:250px"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="2"><%= image_tag @post.get_item_image, size:"300x200" %></td>
          </tr>
          <%= render "public/posts/show", post: @post %>
      <div class="col-md-3 align-self-end">
        <%= link_to "削除する", admin_review_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger mt-2" %>
      </div>
    </div>
  </div>
      <button class="btn btn-outline-primary mb-3 ml-5" onclick="history.back(-1)">一覧へ戻る</button>
</div>