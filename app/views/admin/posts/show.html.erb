<div class="container">
  <h6 class="mt-3"><%= @post.user.nickname %>さんの商品レビュー詳細</h6>
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <table style="word-break:break-all;">
        <thead>
          <tr>
            <th style="width:200px"></th>
            <th style="width:250px"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="2"><%= image_tag @post.get_item_image, size: "300x300" %></td>
          </tr>
          <%= render "public/posts/show", post: @post %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 align-self-end">
      <%= link_to "投稿を削除する", admin_post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger mt-2" %>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div>
      <p>コメント件数：<%= @post.post_comments.count %></p>
        <% @post.post_comments.each do |post_comment| %>
          <p>
          <%= image_tag post_comment.user.get_profile_image, size: "50x50" %>
          <%= post_comment.user.nickname %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %>&emsp;
          <%= post_comment.body %>
          <%= link_to "削除する", admin_post_comment_destroy_path(post_comment.post, post_comment), method: :delete, class: "btn-sm btn-danger" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
    <%= link_to "一覧へ戻る", admin_path, class: "btn btn-outline-primary mb-3" %>
</div>