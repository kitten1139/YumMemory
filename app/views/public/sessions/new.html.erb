<div class="container">
  <!--ログインしていない場合のフラッシュメッセージ表示-->
  <%= flash[:notice] %>
  <h4>ログイン</h4>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tbody>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td><%= f.label :password, "パスワード" %></td>
              <td><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <td>
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "(ログイン状態を維持する)", class: "mr-3" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td class="actions">
                <%= f.submit "ログイン", class: "btn btn-outline-success" %>
              </td>
            </tr>
            <tr>
              <td><b style="background-color:#eee;">会員登録がお済でない方</b></td>
            </tr>
            <tr>
              <td class="text-center"><%= render "public/shared/links" %>からログインしてください。</td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>