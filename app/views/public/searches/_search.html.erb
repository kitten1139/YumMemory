
<% if user_signed_in? %>
  <%= form_with url: search_path, local: true, method: :get, class:"search_form mt-2 float-right" do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([["ユーザー名", "User"], ["商品名", "Post"]]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>