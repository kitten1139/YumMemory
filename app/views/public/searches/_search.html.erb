<% if user_signed_in? %>
  <%= form_with url: search_path, local: true, method: :get, class: "search_form mt-2 float-right" do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([["商品名/スーパー名", "Post"], ["ユーザー名", "User"]]) %>
    <%= f.submit "検索" %>
  <% end %>
<% end %>