<div class="container">
  <%= flash[:notice] %>
  <h4>投稿編集</h4>
      <%= form_with model:@post, url: post_path(@post), method: :patch do |f| %>
        <table style="border-collapse: separate; border-spacing: 70px 5px;">
          <thead>
            <tr>
              <th style="width:200px"></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <%= render 'form', post: @post, f: f, large_categories: @large_categories, item_categories: @item_categories, large_category_id: @large_category.id %>
           <tr>
             <td></td>
             <td><%= f.submit "変更を保存", class:"btn btn-outline-success mb-5" %></td>
           </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>