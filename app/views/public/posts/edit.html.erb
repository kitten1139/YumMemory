<div class="container">
  <%= flash[:notice] %>
  <h4>投稿編集</h4>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model:@post, url: post_path(@post), method: :patch do |f| %>
        <table>
          <%= render 'form', post: @post, f: f, large_categories: @large_categories, item_categories: @item_categories, large_category_id: @large_category.id %>
        </table>
      <% end %>
    </div>
  </div>
</div>