<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h6 class="mt-3"><%= @post.user.nickname %>さんの商品レビュー詳細</h6>
      <div style="margin-left: 50%;">
        <%= image_tag @post.get_item_image, size:"300x200" %>
      </div>
      <table style="margin-left: 50%">
        <tr>
          <td>投稿日:</td>
          <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <td>商品名:</td>
          <td><%= @post.item_name %></td>
        </tr>
        <tr>
          <td>商品カテゴリ:</td>
          <td><%= @post.item_category.name%></td>
        </tr>
        <tr>
          <td>評価:</td>
          <td>
            <div id="star<%= @post.id%>">
             <script>
              $('#star<%= @post.id %>').empty();
              $('#star<%= @post.id%>').raty({
                 size      : 36,
                 starOff   : '<%= asset_path('star-off.png') %>',
                 starOn    : '<%= asset_path('star-on.png') %>',
                 starHalf: '<%= asset_path('star-half.png') %>',
                 half      : true,
                 readOnly: true,
                 score: <%= @post.rate %>,
               });
             </script>
          </td>
          </tr>
          <tr>
            <td>レビュータイトル:</td>
            <td><%= @post.review_title %></td>
          </tr>
          <tr>
            <td>レビュー内容:</td></br>
            <td><%= @post.review_body %></td>
          </tr>

        <% if user_signed_in? && @post.user == current_user %>
          <tr>
            <td></td>
            <td><%= link_to "レビューを編集する", edit_post_path(@post), class: "btn btn-outline-success mt-3" %></td>
          <tr>
          <tr>
            <td></td>
            <td><%= link_to "削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger mt-2" %></td>
          </tr>
        <% end %>
        </tr>
        </table>
        <button class="btn btn-outline-primary mb-3" onclick="history.back(-1)">一覧へ戻る</button>
    </div>
  </div>
</div>